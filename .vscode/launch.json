{
	"version": "0.2.0",
	"configurations": [
		{
			"name": ".NET Core Launch (web)",
			"type": "coreclr",
			"request": "launch",
			"preLaunchTask": "build",
			"program": "${workspaceFolder}/signalR_example.Api/bin/Debug/net5.0/signalR_example.Api.dll",
			"args": [],
			"cwd": "${workspaceFolder}/signalR_example.Api",
			"stopAtEntry": false,
			"serverReadyAction": {
				"action": "openExternally",
				"pattern": "\\bNow listening on:\\s+(https?://\\S+)"
			},
			"env": {
				"ASPNETCORE_ENVIRONMENT": "Development"
			},
			"sourceFileMap": {
				"/Views": "${workspaceFolder}/Views"
			}
		},
		{
			"name": ".NET Core Attach",
			"type": "coreclr",
			"request": "attach"
		},
		{
			"name": "Docker .NET Core Launch",
			"type": "docker",
			"request": "launch",
			"preLaunchTask": "docker-run: debug",
			"netCore": {
				"appProject": "${workspaceFolder}/signalR_example.Api/signalR_example.Api.csproj"
			}
		},
		{
			"name": "Docker Node.js Launch",
			"type": "docker",
			"request": "launch",
			"preLaunchTask": "docker-run: debug",
			"platform": "node",
			"node": {
				"package": "${workspaceFolder}/client/package.json",
				"localRoot": "${workspaceFolder}/client"
			}
		}
	]
}